
{{#each reservations as |reservation|}}
 {{!-- {{#if hasReservation}} --}}
 <h1>{{reservations.business_name}}</h1>
<div id="show-reservation" class="row d-flex justify-content-center flex-wrap"> 
    <div>
        <h2 id="no-reservations"></h2>
    </div>

    <div id="reservation-info" class="col-4">
        <ul>
            <li><h2>{{reservation.restaurant.business_name}}</h2></li>  
            <li>{{reservation.restaurant.business_address}}</li>
            <li>{{reservation.restaurant.business_phone}}</li>
            <li><a href="{{reservation.restaurant.business_website}}"
                    target="_blank">{{reservation.restaurant.business_website}}</a>
            <li>
            <li>Party size: {{reservation.party_size}}</li>
            <li>Reservation Time: {{reservation.time_slot}}</li>
            <br>
            <a id="edit-reservation" href="/dashboard/edit_reservation/1">Edit Reservation</a>
        </ul>
    </div>

    <div id="reservationImg-wrapper" class="col-3">
        <img src="/images/{{reservation.restaurant.business_image}}" alt="">
    </div>
</div> 
{{!-- {{/if}} --}}
{{/each}}


