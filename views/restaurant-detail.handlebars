<div class="row d-flex justify-content-center ">
    {{!-- List of restaurants --}}
    <div class="col-4">
        <h1>Reservations</h1>
        <ol id="hours_list">
            {{#each hoursObj as |hour|}}
            <li>
                <a id="hour_{{@key}}" href="">{{this}}</a>

            </li>
            {{/each}}
        </ol>
    </div>

    {{!-- Restaurant info pane --}}
    <div class="col-8 d-flex justify-content-center flex-column" style="background-image: url(/images/{{restaurant.business_image}});">
        <div>
            <h1>{{restaurant.business_name}}</h1>
        </div>

        <div>
            <ul class="list-group">
                <li class="list-group-item active">Restaurant Information</li>
                <li class="list-group-item">{{restaurant.business_address}}</li>
                <li class="list-group-item">{{restaurant.business_phone}}</li>
                <li class="list-group-item"><a href="{{restaurant.business_website}}"
                        target="_blank">{{restaurant.business_website}}</a></li>
            </ul>
        </div>


    </div>
</div>

<script src="../javascript/availability.js"></script>