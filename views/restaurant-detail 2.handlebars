<div id="res-hours" class="row d-flex justify-content-center flex-wrap ">
    {{!-- List of restaurants --}}
    <div id="hours" class="col-lg-4 col-md-4 col-sm-8">
        <h2>Available Reservations</h2>
        <div>
            <form>
                <label for="party_size">Party Size:</label>
                <input type="number" id="party_size" min="1" max="100" value="2" />
            </form>
        </div>

        <div id="res-btns" class="d-flex flex-column gap-2">
            {{#each hoursObj as |hour|}}
            <button id="hour_{{@key}}" type="click" class="btn btn-light btn-sm" data-bs-toggle="modal"
                data-bs-target="#exampleModal">{{this}}</button>
            {{/each}}
        </div>
    </div>

    {{!-- Restaurant info pane --}}
    <div id="restaurant-detail" class="col-lg-8 col-md-6 col-sm-6 d-flex justify-content-center align-items-center"
        style="background-image: url({{restaurant.business_image}})">
        <div class="info-wrapper">
            <div>
                <h1>{{restaurant.business_name}}</h1>
            </div>

            <div>
                <ul>
                    <li>Restaurant Information</li>
                    <li>{{restaurant.business_address}}</li>
                    <li>{{restaurant.business_phone}}</li>
                    <li><a href="{{restaurant.business_website}}" target="_blank">{{restaurant.business_website}}</a>
                    </li>
                </ul>
            </div>
        </div>


    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Reservation Confirmed</h5>
            </div>
            <div class="modal-body">
                Your reservation at {{restaurant.business_name}} is confirmed!
                <br>
                We sent a confirmation text to {{phoneNum}}
            </div>
            <div class="modal-footer">
                <button id="close" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button id="main-menu" type="button" class="btn btn-primary">Main Menu</button>
            </div>
        </div>
    </div>
</div>



<script src="../javascript/availability.js"></script>
<script src="../javascript/submit_reservation.js"></script>

