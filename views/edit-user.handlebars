<form class="edit_user_form">
  <div>
    <label for="first_name_edit">first name:</label>
    <input type="text" id="first_name_edit" value="{{users.first_name}}" />
  </div>
  <div>
    <label for="last_name_edit">last name:</label>
    <input type="text" id="last_name_edit" value="{{users.last_name}}" />
  </div>
  <div>
    <label for="username_edit">username:</label>
    <input type="text" id="username_edit" value="{{users.username}}" />
  </div>
  <div>
    <label for="user_email_edit">email:</label>
    <input type="text" id="email_edit" value="{{users.email}}" />
  </div>
  <div>
    <label for="user_password_edit">password:</label>
    <input type="password" id="password_edit" />
  </div>
  <div>
    <label for="user_phone_edit">phone:</label>
    <input type="text" id="phone_edit" value="{{users.phone_number}}" />
  </div>
  <div>
    <button id="primary-button" type="submit">Submit Changes</button>
  </div>
</form>

<button id="delete-button" class="delete-user-btn">Delete User</button>

<script src="/javascript/edit-user.js"></script>
<script src="/javascript/delete-user.js"></script>